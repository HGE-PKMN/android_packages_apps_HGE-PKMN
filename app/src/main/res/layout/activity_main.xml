<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/whereisDon"
    android:background="#663333">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_resume"
        android:id="@+id/continue_button"
        android:nestedScrollingEnabled="false"
        android:onClick="buttonOnClick"
        android:textColor="#ffffffff"
        android:layout_above="@+id/restart_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="28dp"
        android:background="#504E4E4E" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_restart"
        android:id="@+id/restart_button"
        android:onClick="buttonOnClick"
        android:textColor="#ffffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="38dp"
        android:background="#504E4E4E" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/title_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pic_menu"
        android:src="@mipmap/ic_launcher"
        android:layout_alignTop="@+id/title_text"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/continue_button" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender_change_2"
            android:id="@+id/gender_change_radiobutton_2"
            android:checked="false"
            android:singleLine="false"
            android:nestedScrollingEnabled="false"
            android:onClick="buttonOnClick"
            android:layout_below="@+id/gender_change_radiobutton"
            android:layout_alignLeft="@+id/gender_change_radiobutton"
            android:layout_alignStart="@+id/gender_change_radiobutton"
            android:layout_marginTop="27dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender_change"
            android:id="@+id/gender_change_radiobutton"
            android:checked="false"
            android:onClick="buttonOnClick"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:singleLine="false" />

    </RadioGroup>

</RelativeLayout>