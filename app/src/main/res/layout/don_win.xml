<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".DonWin"
    android:background="#663333"
    android:fillViewport="false"
    android:id="@+id/ourtro">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#663333"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/continue_outro"
            android:background="#504E4E4E"
            android:text="@string/continue_outro"
            android:onClick="returnToMenu"
            android:textColor="#ffffffff"
            android:layout_below="@+id/outro"
            android:layout_marginTop="50sp"
            android:layout_alignLeft="@+id/outro"
            android:layout_alignStart="@+id/outro" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/outro"
            android:text="@string/don_win_text"
            android:phoneNumber="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/donWin"
            android:layout_toEndOf="@+id/donWin" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/donWin"
            android:layout_marginLeft="39dp"
            android:layout_marginStart="39dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/don" />
    </RelativeLayout>

    </LinearLayout>

    </ScrollView>