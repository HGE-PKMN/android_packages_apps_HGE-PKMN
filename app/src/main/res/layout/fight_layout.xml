<?xml version="1.0" encoding="utf-8"?>
<!-- authored by Jan Zartmann -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context=".FightEngine"
    android:baselineAligned="false"
    android:id="@+id/fight_layout"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:id="@+id/fight"
        android:background="#663333">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/attack_button"
            android:id="@+id/attack_button"
            android:background="#000000"
            android:onClick="fight"
            android:textColor="#ffffffff"
            android:width="200dp"
            android:layout_marginBottom="39dp"
            android:layout_above="@+id/escape"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/escape"
            android:id="@+id/escape"
            android:onClick="escape"
            android:background="#000000"
            android:textColor="#ffffffff"
            android:width="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textfield"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/webertron_1"
            android:maxHeight="200px"
            android:maxWidth="200px"
            android:minWidth="200px"
            android:minHeight="200px"
            android:layout_above="@+id/attack_button"
            android:layout_alignLeft="@+id/attack_button"
            android:layout_alignStart="@+id/attack_button" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/webertron_2"
            android:maxHeight="200px"
            android:maxWidth="200px"
            android:minWidth="200px"
            android:minHeight="200px"
            android:layout_marginLeft="70dp"
            android:layout_marginStart="70dp"
            android:layout_alignBottom="@+id/attack_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>
</LinearLayout>